{%extends "GlobalFoodBundle:Default:layout.html.twig"%}

{%block global%}
<div id="mensajeregister">
    <div class="alert alert-success">
        <button data-dismiss="alert" class="close"></button>
        Muchas gracias por registrar sus datos con nosotros, ahora puede realizar la compra de sus productos.
    </div>
</div>

<div class="row-fluid">        
    <div class="span6 box txt_box">
        <h3> Mi perfil</h3>  
        <form class='form-horizontal' id="register_form" action="{{path('customer_update', { 'id': app.user.id })}}" method='POST' {{ form_enctype(form) }}>
            {{ form_widget(form) }} 
            <hr>
            <button type="submit" class="btn green"> Aceptar </button>
        </form>
    </div>
        
    <div class="span6" style="background: rgba(0,0,0,.5);">
        <div style="padding: 8px;">
            <h3>Mi perfil</h3>
            <p>
              En esta sección puede modificar los datos de su perfil. Puede cambiar la contraseña, su dirección email, etc
            </p>
        </div>
    </div>
        
    <script type="text/javascript">
        setTimeout(function(){jQuery("#mensajeregister").slideUp('slow')},3000);
    </script>
</div>
{%endblock global%}

